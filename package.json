{
  "name": "@pfzone/svelte-zoom",
  "version": "1.0.0",
  "type": "module",
  "description": "Nearly native image scaling in web (mobile/desktop), rich in functionality. This will make your mobile users happy",
  "svelte": "src/index.svelte",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "svelte": "./src/index.svelte",
      "default": "./dist/index.js"
    },
    "./index.svelte": "./src/index.svelte"
  },
  "scripts": {
    "build": "vite build",
    "pretty": "prettier --config .prettierrc --write \"vite.config.ts\" \"src/*.svelte\" \"src/*.ts\" \"package.json\" \"*.md\"",
    "go": "npm-run-all pretty build",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pfzone/svelte-zoom.git"
  },
  "author": "Vahe Araqelyan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vaheqelyan/svelte-zoom/issues"
  },
  "keywords": [
    "svelte",
    "hook",
    "zoom",
    "pinch",
    "pan",
    "touch",
    "mobile",
    "desktop",
    "browser",
    "mouse"
  ],
  "homepage": "https://github.com/vaheqelyan/svelte-zoom#readme",
  "peerDependencies": {
    "svelte": "^5.20.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tsconfig/svelte": "^5.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.2",
    "prettier-plugin-svelte": "^3.3.3",
    "svelte": "^5.20.5",
    "typescript": "^5.7.3",
    "vite": "^6.2.0"
  },
  "files": [
    "src",
    "dist"
  ]
}
